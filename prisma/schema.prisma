
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Define your models here
model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String   // Add this line
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}